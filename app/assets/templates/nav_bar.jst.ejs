<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container-fluid">
    <ul class="nav navbar-nav navbar-left">

      <!-- Main Logo/Index -->
      <li class='mainIndex'><a class="navbar-brand" href="#/">TenGigg</a></li>

      <!-- Sort by Recent -->
      <li class='recentIndex'><a class='recent' href="#recent/posts">Recent</a></li>

      <!-- Categories Dropdown -->
      <li class='categories'>
        <a href="#" class="dropdown-toggle" role="button" data-toggle="dropdown"
        aria-haspopup="true" aria-expanded="false">Categories
        <span class="caret"></span></a>
        <ul class="dropdown-menu">
          <% TenGigg.categories.each(function (category) { %>
            <li class='dropdown-item'><a href="#<%= category.escape('name') %>/posts">
            <%= category.escape('name') %></a></li>
          <% }); %>
        </ul>
      </li>
    </ul>
    <!-- Search Nav -->
    <ul class="nav navbar-nav navbar-right">
      <li>
        <div class="search-div">
            <input type="text" class="form-control search-input" name="instant-search" placeholder="Search posts by title...">
            <ul class="dropdown-menu insta-search">
            </ul>
        </div>
      </li>

      <% if (window.TenGigg.CURRENT_USER.username !== "Account") { %>

        <!-- Submit Button -->
        <li>
          <button id='compose' class="btn btn-info">Submit Post!</button>
        </li>

        <!-- Account Dropdown (logged in) -->
        <li>
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
          aria-haspopup="true" aria-expanded="false"><%= window.TenGigg.CURRENT_USER.username %>
          <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li class='dropdown-item'><a href="javascript:void(0)" class="sign-out">Sign Out</a></li>

            <li><a href="#profile" class="profile">Profile</a></li>
          </ul>
        </li>

      <% } else { %>
      	<li>
      		<div class="please-log-in">Log in to post, comment, and vote! ></div>
      	</li>
        <!-- Account Dropdown (not logged in) -->
        <li>
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
          aria-haspopup="true" aria-expanded="false"><%= window.TenGigg.CURRENT_USER.username %>
          <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li class='dropdown-item'><a href="/session/new" class="sign-in">Log In</a></li>
            <li class='dropdown-item'><a href="/users/new" class="sign-up">Sign Up</a></li>
          </ul>
        </li>
        <% } %>
    </ul>

  </div>
</nav>
