<div class="form-container">

	<form action='<%= session_url %>' method='post' class='auth-form'>
		<%= auth_token %>
		<h3>Log In</h3>
		<div class="form-group">
			<input type='text' class='form-control' placeholder='Username'
				aria-describedby='basic-addon1' name='user[username]'>
		</div>

		<div class="form-group">
			<input type='password' class='form-control' placeholder='Password'
				aria-describedby='basic-addon1' name='user[password]'>
		</div>
		<span>
			<input type='submit' value='Log In' class='log-in-btn'>
		</span>
		<form action='<%= session_url %>' method='post' class='auth-form'>
			<%= auth_token %>
			<input type="hidden" value="Guest" name='user[username]'>
			<input type="hidden" value="tester" name='user[password]'>
			<input type="submit" value='Guest'>
		</form>
	</form>
	<!-- Guest Login for Demo -->
</div>
