<div class="full-page">
	<div class="form-container">
		<form action='<%= session_url %>' method='post' class='auth-form'>
			<%= auth_token %>
			<h3>Log In</h3>
			<div class="form-group">
				<input id='username' type='text' class='form-control' placeholder='Username'
					aria-describedby='basic-addon1' name='user[username]'>
			</div>

			<div class="form-group">
				<input id='password' type='password' class='form-control' placeholder='Password'
					aria-describedby='basic-addon1' name='user[password]'>
			</div>
			<input type='submit' value='Log In' class='btn btn-default log-in-btn'>
			<button id='guest-log-in' name="button" class="btn btn-default">Guest</button>
			<br>
			<div id="notice"><%= flash[:errors] %></div>
		</form>
		<% unless logged_in? %>
			<script type="text/javascript">
				$('#guest-log-in').click( function () {
					$('#username').val('Guest');
					$('#password').val('guest123');
					$('.log-in-btn').trigger('click');
				});
			</script>
		<% end %>
	</div>
</div>
